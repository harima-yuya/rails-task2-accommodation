<h1>予約フォーム</h1>
<ol class="nav">
	<li>1.入力</li>
	<li class="current">2.確認</li>
	<li>3.完了</li>
</ol>

<dl>
	<dt>タイトル</dt>
	<dd><%= @post.title %></dd>
	<dt>開始日</dt>
	<dd><%= @post.start_date %></dd>
	<dt>終了日</dt>
	<dd><%= @post.end_date %></dd>
    <dt>終日</dt>
	<dd><%= @post.all_day %></dd>
    <dt>スケジュールメモ</dt>
	<dd><%= @post.memo %></dd>
    <dt>画像</dt>
	<dd><%= @post.image %></dd>
</dl>



<%= form_for @post, method: :post, url: posts_back_path do |form| %>
	<%= form.hidden_field :title %>
	<%= form.hidden_field :start_date %>
	<%= form.hidden_field :end_date %>
    <%= form.hidden_field :all_day %>
	<%= form.hidden_field :memo %>
	<%= form.hidden_field :image %>
	<%= form.submit '入力画面に戻る' %>
<% end %>

<%= form_for @post, method: :post, url: posts_complete_path do |form| %>
	<%= form.hidden_field :title %>
	<%= form.hidden_field :start_date %>
	<%= form.hidden_field :end_date %>
    <%= form.hidden_field :all_day %>
	<%= form.hidden_field :memo %>
	<%= form.hidden_field :image %>
	<%= form.submit '送信する' %>
<% end %>