<div class="layout2 sign-up-wrapper">
    <p>新しいアカウントを作成</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
        <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名" %>
        </div>
 
       <div class="field">
           <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス" %>
      </div>
 
      <div class="field">
          <% if @minimum_password_length %>
          <% end %>
         <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード" %>
      </div>
 
      <div class="field">
         <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード確認" %>
      </div>
 
      <div class="actions">
         <%= f.submit "新しいアカウントを作成", class:"btn" %>
      </div>
      <div class="sign-up-link"><%= render "users/shared/links" %></div>
       <!--app/view/users/shared/-links.htmlにて表記を変更-->
    <% end %>
</div>