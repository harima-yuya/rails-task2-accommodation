<div class="layout1-container profile-container">
    <div class="layout1-top profile-top">
         <div class=layout1-page-link>
           <a href="/users/account"><span>アカウント</span></a>
           <a href="/users/profile"><span class="current-page">プロフィール</span></a>
        </div>
    </div>
    
    <div class="layout1-main profile-main">
       <h3>プロフィール</h3>
       <div class="layout1-item profile-item profile-item-image">
           <%= image_tag @user.image.url ,class:"profile-image" %>
       </div>
        <%= form_with model:@user, url:{controller:"users", action:"update"} do |f| %>
             <table>
                <tr>
                    <th><%= f.label :アイコン画像 %></th>
                    <td> 
                        <%= f.file_field :image %>
                        <%= f.hidden_field :image_cache %>
                    </td>
                </tr>
                <tr>
                    <th><%= f.label :名前 %></th>
                    <td><%= f.text_field :name %></td>
                </tr>
                <tr>
                    <th><%= f.label :自己紹介 %></th>
                    <td><%= f.text_area :comment %></td>
                </tr>
      
            </table>
            <div class="layout1-item profile-item">
                <%= f.submit "更新", class: "btn"%>
            </div>
         <% end %> 
    </div>
</div>
